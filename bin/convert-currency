#!/bin/bash

# https://www.mastercard.us/en-us/personal/get-support/convert-currency.html

set -e

usage() {
    echo usage: $0 amount [from=USD [to=AUD]] 1>&2
    exit 1
}

if [[ $# -lt 1 || $# -gt 3 ]]; then
    usage
fi

AMOUNT=$1
FROM=${2:-USD}
TO=${3:-AUD}

curl -s "https://www.mastercard.us/settlement/currencyrate/fxDate=0000-00-00;transCurr=${FROM^^};crdhldBillCurr=${TO^^};bankFee=0;transAmt=${AMOUNT}/conversion-rate" | jq -S .data
